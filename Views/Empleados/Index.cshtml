@{
}

@model IEnumerable<Sistemas.Models.Empleado>

<h2>Empleados</h2>

<a asp-action="Crear" class="btn btn-primary mb-3">Registrar Empleado</a>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Puesto</th>
            <th>Teléfono</th>
            <th>Disponibilidad</th>
            <th>Acciones</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var e in Model)
        {
            <tr>
                <td>@e.IdEmpleado</td>
                <td>@e.Nombre</td>
                <td>@e.Apellido</td>
                <td>@e.Puesto</td>
                <td>@e.Telefono</td>
                <td>@e.Disponibilidad</td>
                <td>
                    <a asp-action="Details" asp-route-id="@e.IdEmpleado" class="btn btn-info btn-sm">Detalles</a>
                    <a asp-action="Editar" asp-route-id="@e.IdEmpleado" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Eliminar" asp-route-id="@e.IdEmpleado" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
