@{
}
@model IEnumerable<Sistemas.Models.Desempeno>

<h2>Evaluaciones de Desempeño Registradas</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<a asp-action="Crear" class="btn btn-primary mb-3">Registrar Nueva Evaluación</a>
<a asp-action="Index" class="btn btn-secondary mb-3">Vista de Resumen</a>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Empleado</th>
            <th>Fecha Evaluación</th>
            <th>Periodo</th>
            <th>Calificación</th>
            <th>Servicios</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Empleado?.Nombre @item.Empleado?.Apellido</td>
                <td>@item.FechaEvaluacion.ToShortDateString()</td>
                <td>@item.PeriodoInicio.ToShortDateString() - @item.PeriodoFin.ToShortDateString()</td>
                <td>
                    <span class="badge bg-@(item.Calificacion >= 4 ? "success" : item.Calificacion >= 3 ? "warning" : "danger")">
                        @item.Calificacion / 5
                    </span>
                </td>
                <td>@item.ServiciosCompletados</td>
                <td>
                    <a asp-action="VerEvaluacion" asp-route-id="@item.IdDesempeno" class="btn btn-info btn-sm">Ver</a>
                    <a asp-action="Editar" asp-route-id="@item.IdDesempeno" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Eliminar" asp-route-id="@item.IdDesempeno" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>