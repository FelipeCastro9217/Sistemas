@{
}
@model Sistemas.Models.Asistencia

<h2>Editar Asistencia</h2>

<form asp-action="Editar" method="post">
    <input type="hidden" asp-for="IdAsistencia" />

    <div class="mb-3">
        <label>Empleado</label>
        <select asp-for="IdEmpleado" class="form-select" asp-items="ViewBag.Empleados" disabled>
        </select>
    </div>

    <div class="mb-3">
        <label>Fecha</label>
        <input asp-for="Fecha" type="date" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label>Hora Entrada</label>
        <input asp-for="HoraEntrada" type="datetime-local" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Hora Salida</label>
        <input asp-for="HoraSalida" type="datetime-local" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Estado</label>
        <select asp-for="Estado" class="form-select">
            <option value="Presente">Presente</option>
            <option value="Ausente">Ausente</option>
            <option value="Retardo">Retardo</option>
            <option value="Justificado">Justificado</option>
        </select>
    </div>

    <div class="mb-3">
        <label>Observaciones</label>
        <textarea asp-for="Observaciones" class="form-control" rows="3"></textarea>
    </div>

    <button class="btn btn-primary">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>