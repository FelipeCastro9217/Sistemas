@{
}
@model Sistemas.Models.Asistencia

<h2>Detalles de Asistencia</h2>

<div class="card mt-3">
    <div class="card-body">
        <p><strong>ID:</strong> @Model.IdAsistencia</p>
        <p><strong>Empleado:</strong> @Model.Empleado?.Nombre @Model.Empleado?.Apellido</p>
        <p><strong>Fecha:</strong> @Model.Fecha.ToShortDateString()</p>
        <p><strong>Hora Entrada:</strong> @(Model.HoraEntrada?.ToString("HH:mm") ?? "No registrada")</p>
        <p><strong>Hora Salida:</strong> @(Model.HoraSalida?.ToString("HH:mm") ?? "No registrada")</p>
        <p>
            <strong>Estado:</strong>
            <span class="badge bg-@(Model.Estado == "Presente" ? "success" : Model.Estado == "Retardo" ? "warning" : "danger")">
                @Model.Estado
            </span>
        </p>
        <p><strong>Observaciones:</strong> @Model.Observaciones</p>
    </div>
</div>

<a asp-action="Index" class="btn btn-secondary mt-3">Volver</a>