<h2>Enviar Aviso al Cliente (HU0305)</h2>

<form asp-action="EnviarAviso" method="post">

    <input type="hidden" asp-for="IdCliente" />

    <div class="mb-3">
        <label class="form-label">Mensaje</label>
        <textarea asp-for="Mensaje" class="form-control" rows="4" required></textarea>
    </div>

    <button class="btn btn-success">Enviar Aviso</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>

</form>
