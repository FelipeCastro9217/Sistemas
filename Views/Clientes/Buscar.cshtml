@{
}
@model IEnumerable<Sistemas.Models.Cliente>

<h2>Buscar Cliente (HU0304)</h2>

<form asp-action="Buscar" method="get" class="mt-3 mb-4">
    <div class="input-group">
        <input type="text" name="criterio" value="@ViewBag.Criterio" class="form-control" placeholder="Nombre, apellido, teléfono o email..." />
        <button class="btn btn-primary">Buscar</button>
    </div>
</form>

@if (Model != null && Model.Any())
{
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Email</th>
                <th>Teléfono</th>
                <th>Historial</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.IdCliente</td>
                    <td>@c.Nombre @c.Apellido</td>
                    <td>@c.Email</td>
                    <td>@c.Telefono</td>
                    <td>
                        <a asp-action="Historial" asp-route-id="@c.IdCliente" class="btn btn-secondary btn-sm">
                            Ver Historial
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No hay resultados para esta búsqueda.</p>
}
