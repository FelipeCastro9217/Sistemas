@{
}
@model IEnumerable<Sistemas.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
}

<h2 class="mb-4">Listado de Clientes (HU0304)</h2>
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
<a asp-action="Crear" class="btn btn-primary mb-3">Registrar Cliente (HU0301)</a>
<a asp-action="Buscar" class="btn btn-success mb-3 ms-2">Buscar Cliente</a>


<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Teléfono</th>
            <th>Email</th>
            <th>Clasificación</th>
            <th>Fecha Registro</th>
            <th>Acciones</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.IdCliente</td>
                <td>@c.Nombre @c.Apellido</td>
                <td>@c.Telefono</td>
                <td>@c.Email</td>
                <td>
                    @if (string.IsNullOrEmpty(c.Clasificacion))
                    {
                        <span class="badge bg-secondary">Sin clasificar</span>
                    }
                    else
                    {
                        <span class="badge bg-@(c.Clasificacion == "VIP" ? "warning" : c.Clasificacion == "Frecuente" ? "info" : "secondary")">
                            @c.Clasificacion
                        </span>
                    }
                </td>
                <td>@c.FechaRegistro.ToShortDateString()</td>

                <td>
                    <a asp-action="Details" asp-route-id="@c.IdCliente" class="btn btn-info btn-sm">Detalles</a>
                    <a asp-action="Editar" asp-route-id="@c.IdCliente" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Clasificar" asp-route-id="@c.IdCliente" class="btn btn-primary btn-sm">Clasificar</a>
                    <a asp-action="EnviarAviso" asp-route-id="@c.IdCliente" class="btn btn-success btn-sm">Enviar Aviso</a>
                    <a asp-action="Historial" asp-route-id="@c.IdCliente" class="btn btn-secondary btn-sm">Historial</a>
                    <a asp-action="Eliminar" asp-route-id="@c.IdCliente" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>