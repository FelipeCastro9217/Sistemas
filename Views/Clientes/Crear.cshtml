@model Sistemas.Models.Cliente

@*
    Sprint 3 – HU0301
    Registrar cliente y datos principales.
*@

@{
    ViewData["Title"] = "Registrar Cliente";
}

<h2>Registrar Cliente (HU0301)</h2>

<form asp-action="Crear" method="post" class="mt-3">

    <div class="row">

        <div class="col-md-6 mb-3">
            <label class="form-label">Nombre</label>
            <input asp-for="Nombre" class="form-control" required />
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label">Apellido</label>
            <input asp-for="Apellido" class="form-control" required />
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label">Teléfono</label>
            <input asp-for="Telefono" class="form-control" />
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label">Email</label>
            <input asp-for="Email" type="email" class="form-control" />
        </div>

        <div class="col-md-12 mb-3">
            <label class="form-label">Dirección</label>
            <input asp-for="Direccion" class="form-control" />
        </div>

    </div>

    <button class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>

</form>
