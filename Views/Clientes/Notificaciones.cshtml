@{
}
@model IEnumerable<Sistemas.Models.Notificacion>

@{
    var cliente = ViewBag.Cliente as Sistemas.Models.Cliente;
}

<h2>Notificaciones - @cliente.Nombre @cliente.Apellido</h2>

<a asp-action="EnviarAviso" asp-route-id="@cliente.IdCliente" class="btn btn-primary mb-3">
    Enviar Nuevo Aviso
</a>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Fecha</th>
            <th>Mensaje</th>
            <th>Estado</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@item.Mensaje</td>
                <td>
                    <span class="badge bg-@(item.Estado == "Enviado" ? "success" : "warning")">
                        @item.Estado
                    </span>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Details" asp-route-id="@cliente.IdCliente" class="btn btn-secondary">Volver</a>