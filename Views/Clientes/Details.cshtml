@{
}
@model Sistemas.Models.Cliente

<h2>Detalles del Cliente</h2>

<div class="card mt-3">
    <div class="card-body">

        <p><strong>ID:</strong> @Model.IdCliente</p>
        <p><strong>Nombre:</strong> @Model.Nombre @Model.Apellido</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Teléfono:</strong> @Model.Telefono</p>
        <p><strong>Dirección:</strong> @Model.Direccion</p>
        <p><strong>Fecha Registro:</strong> @Model.FechaRegistro.ToShortDateString()</p>
        <p>
            <strong>Clasificación:</strong>
            @if (string.IsNullOrEmpty(Model.Clasificacion))
            {
                <span class="badge bg-secondary">Sin clasificar</span>
            }
            else
            {
                <span class="badge bg-@(Model.Clasificacion == "VIP" ? "warning" : Model.Clasificacion == "Frecuente" ? "info" : "secondary")">
                    @Model.Clasificacion
                </span>
            }
        </p>

        <div class="btn-group mt-3" role="group">
            <a asp-action="Editar" asp-route-id="@Model.IdCliente" class="btn btn-warning">Editar</a>
            <a asp-action="Historial" asp-route-id="@Model.IdCliente" class="btn btn-info">Ver Historial</a>
            <a asp-action="Clasificar" asp-route-id="@Model.IdCliente" class="btn btn-primary">Clasificar Cliente</a>
            <a asp-action="EnviarAviso" asp-route-id="@Model.IdCliente" class="btn btn-success">Enviar Aviso</a>
            <a asp-action="Notificaciones" asp-route-id="@Model.IdCliente" class="btn btn-secondary">Ver Avisos</a>
        </div>

        <a asp-action="Index" class="btn btn-secondary mt-3 d-block">Volver al Listado</a>

    </div>
</div>