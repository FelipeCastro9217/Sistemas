@{
}

@model Sistemas.Models.Cliente

<h2>Eliminar Cliente</h2>

<div class="alert alert-danger">
    ¿Está seguro de eliminar este cliente?
</div>

<div class="card">
    <div class="card-body">
        <p><strong>ID:</strong> @Model.IdCliente</p>
        <p><strong>Nombre:</strong> @Model.Nombre @Model.Apellido</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Teléfono:</strong> @Model.Telefono</p>
    </div>
</div>

<form method="post" asp-action="EliminarConfirmado">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="IdCliente" />
    <button class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
