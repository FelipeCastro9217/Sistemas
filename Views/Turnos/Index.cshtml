@model IEnumerable<Sistemas.Models.Turno>

<h2>Listado de Turnos</h2>

<a asp-action="Crear" class="btn btn-primary mb-3">Registrar Turno</a>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Cliente</th>
            <th>Empleado</th>
            <th>Fecha</th>
            <th>Hora</th>
            <th>Bahía</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.Ctur</td>
                <td>@t.Cliente?.Nombre</td>
                <td>@t.Empleado?.Nombre</td>
                <td>@t.Ftrn.ToShortDateString()</td>
                <td>@t.Htrn</td>
                <td>@t.Cbah</td>
                <td>@t.Estr</td>

                <td>
                    <a asp-action="Details" asp-route-id="@t.Ctur" class="btn btn-info btn-sm">Detalles</a>
                    <a asp-action="Editar" asp-route-id="@t.Ctur" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Asignar" asp-route-id="@t.Ctur" class="btn btn-secondary btn-sm">Asignar</a>
                    <a asp-action="CambiarEstado" asp-route-id="@t.Ctur" class="btn btn-success btn-sm">Cambiar Estado</a>
                    <a asp-action="Cancelar" asp-route-id="@t.Ctur" class="btn btn-danger btn-sm">Cancelar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
