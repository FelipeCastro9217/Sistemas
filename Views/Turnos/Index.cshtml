@model IEnumerable<Sistemas.Models.Turno>

<h2>Listado de Turnos</h2>
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
<a asp-action="Crear" class="btn btn-primary mb-3">Registrar Turno</a>


<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Cliente</th>
            <th>Empleado</th>
            <th>Fecha</th>
            <th>Hora</th>
            <th>Bahía</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.Ctur</td>
                <td>@t.Cliente?.Nombre @t.Cliente?.Apellido</td>
                <td>@(t.Empleado?.Nombre ?? "Sin asignar")</td>
                <td>@t.Ftrn.ToShortDateString()</td>
                <td>@t.Htrn</td>
                <td>@(t.Cbah?.ToString() ?? "N/A")</td>
                <td>
                    <span class="badge bg-@(t.Estr == "Finalizado" ? "success" : t.Estr == "En Proceso" ? "warning" : t.Estr == "Cancelado" ? "danger" : "secondary")">
                        @t.Estr
                    </span>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@t.Ctur" class="btn btn-info btn-sm">Detalles</a>
                    <a asp-action="Editar" asp-route-id="@t.Ctur" class="btn btn-warning btn-sm">Editar</a>
                    @if (t.Cemp == null)
                    {
                        <a asp-action="Asignar" asp-route-id="@t.Ctur" class="btn btn-success btn-sm">Asignar</a>
                    }
                    <a asp-action="CambiarEstado" asp-route-id="@t.Ctur" class="btn btn-primary btn-sm">Estado</a>
                    @if (t.Estr != "Cancelado")
                    {
                        <a asp-action="Cancelar" asp-route-id="@t.Ctur" class="btn btn-danger btn-sm">Cancelar</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>