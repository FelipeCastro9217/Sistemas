@{
}
@model Sistemas.Models.Tarea

<h2>Detalles de la Tarea</h2>

<div class="card mt-3">
    <div class="card-body">
        <p><strong>ID:</strong> @Model.IdTarea</p>
        <p><strong>Empleado:</strong> @Model.Empleado?.Nombre @Model.Empleado?.Apellido</p>
        <p><strong>Descripción:</strong> @Model.Descripcion</p>
        <p><strong>Fecha Asignación:</strong> @Model.FechaAsignacion.ToShortDateString()</p>
        <p><strong>Fecha Inicio:</strong> @(Model.FechaInicio?.ToShortDateString() ?? "No iniciada")</p>
        <p><strong>Fecha Fin:</strong> @(Model.FechaFin?.ToShortDateString() ?? "No finalizada")</p>
        <p>
            <strong>Estado:</strong>
            <span class="badge bg-@(Model.Estado == "Completada" ? "success" : Model.Estado == "En Proceso" ? "warning" : "secondary")">
                @Model.Estado
            </span>
        </p>
        <p>
            <strong>Prioridad:</strong>
            <span class="badge bg-@(Model.Prioridad == "Alta" ? "danger" : Model.Prioridad == "Media" ? "warning" : "info")">
                @Model.Prioridad
            </span>
        </p>
        <p><strong>Observaciones:</strong> @Model.Observaciones</p>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Editar" asp-route-id="@Model.IdTarea" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>