@{
}
@model Sistemas.Models.Tarea

<h2>Eliminar Tarea</h2>

<div class="alert alert-danger">
    ¿Está seguro de eliminar esta tarea?
</div>

<div class="card">
    <div class="card-body">
        <p><strong>ID:</strong> @Model.IdTarea</p>
        <p><strong>Empleado:</strong> @Model.Empleado?.Nombre @Model.Empleado?.Apellido</p>
        <p><strong>Descripción:</strong> @Model.Descripcion</p>
        <p><strong>Estado:</strong> @Model.Estado</p>
    </div>
</div>

<form asp-action="DeleteConfirmed" method="post" class="mt-3">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="IdTarea" name="id" />
    <button class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>