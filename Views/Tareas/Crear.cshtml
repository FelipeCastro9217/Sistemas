@model Sistemas.Models.Tarea

<h2>Asignar Tarea (HU0402)</h2>

<form asp-action="Crear" method="post">
    <div class="row">
        <div class="col-md-6 mb-3">
            <label>Empleado</label>
            <select asp-for="IdEmpleado" class="form-select" asp-items="ViewBag.Empleados">
                <option value="">Seleccione...</option>
            </select>
        </div>

        <div class="col-md-6 mb-3">
            <label>Fecha de Asignación</label>
            <input asp-for="FechaAsignacion" type="date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
        </div>

        <div class="col-md-12 mb-3">
            <label>Descripción de la Tarea</label>
            <textarea asp-for="Descripcion" class="form-control" rows="3" required></textarea>
        </div>

        <div class="col-md-4 mb-3">
            <label>Prioridad</label>
            <select asp-for="Prioridad" class="form-select">
                <option value="Alta">Alta</option>
                <option value="Media" selected>Media</option>
                <option value="Baja">Baja</option>
            </select>
        </div>

        <div class="col-md-4 mb-3">
            <label>Estado</label>
            <select asp-for="Estado" class="form-select">
                <option value="Pendiente" selected>Pendiente</option>
                <option value="En Proceso">En Proceso</option>
                <option value="Completada">Completada</option>
            </select>
        </div>

        <div class="col-md-12 mb-3">
            <label>Observaciones</label>
            <textarea asp-for="Observaciones" class="form-control" rows="2"></textarea>
        </div>
    </div>

    <button class="btn btn-success">Asignar Tarea</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</form>

<div asp-validation-summary="All" class="text-danger mt-3"></div>