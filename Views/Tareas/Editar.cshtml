@model Sistemas.Models.Tarea

<h2>Editar Tarea</h2>

<form asp-action="Editar" method="post">
    <input type="hidden" asp-for="IdTarea" />

    <div class="row">
        <div class="col-md-6 mb-3">
            <label>Empleado</label>
            <select asp-for="IdEmpleado" class="form-select" asp-items="ViewBag.Empleados">
            </select>
        </div>

        <div class="col-md-6 mb-3">
            <label>Fecha de Asignación</label>
            <input asp-for="FechaAsignacion" type="date" class="form-control" readonly />
        </div>

        <div class="col-md-12 mb-3">
            <label>Descripción</label>
            <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
        </div>

        <div class="col-md-4 mb-3">
            <label>Fecha Inicio</label>
            <input asp-for="FechaInicio" type="datetime-local" class="form-control" />
        </div>

        <div class="col-md-4 mb-3">
            <label>Fecha Fin</label>
            <input asp-for="FechaFin" type="datetime-local" class="form-control" />
        </div>

        <div class="col-md-4 mb-3">
            <label>Estado</label>
            <select asp-for="Estado" class="form-select">
                <option value="Pendiente">Pendiente</option>
                <option value="En Proceso">En Proceso</option>
                <option value="Completada">Completada</option>
                <option value="Cancelada">Cancelada</option>
            </select>
        </div>

        <div class="col-md-6 mb-3">
            <label>Prioridad</label>
            <select asp-for="Prioridad" class="form-select">
                <option value="Alta">Alta</option>
                <option value="Media">Media</option>
                <option value="Baja">Baja</option>
            </select>
        </div>

        <div class="col-md-12 mb-3">
            <label>Observaciones</label>
            <textarea asp-for="Observaciones" class="form-control" rows="2"></textarea>
        </div>
    </div>

    <button class="btn btn-primary">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>