@{
}
@model Sistemas.Models.Vehiculo

<h2>Eliminar Vehículo</h2>

<div class="alert alert-danger">
    ¿Está seguro de eliminar este vehículo?
</div>

<div class="card">
    <div class="card-body">
        <p><strong>Placa:</strong> @Model.Placa</p>
        <p><strong>Marca:</strong> @Model.Marca</p>
        <p><strong>Modelo:</strong> @Model.Modelo</p>
        <p><strong>Cliente:</strong> @Model.Cliente?.Nombre @Model.Cliente?.Apellido</p>
    </div>
</div>

<form asp-action="DeleteConfirmed" method="post" class="mt-3">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="IdVehiculo" name="id" />
    <button class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>