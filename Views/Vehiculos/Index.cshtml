@{
}
@model IEnumerable<Sistemas.Models.Vehiculo>

<h2>Gestión de Vehículos</h2>
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
<a asp-action="Crear" class="btn btn-primary mb-3">Registrar Vehículo</a>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Placa</th>
            <th>Marca</th>
            <th>Modelo</th>
            <th>Color</th>
            <th>Tipo</th>
            <th>Cliente</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><strong>@item.Placa</strong></td>
                <td>@item.Marca</td>
                <td>@item.Modelo</td>
                <td>@item.Color</td>
                <td>@item.Tipo</td>
                <td>@item.Cliente?.Nombre @item.Cliente?.Apellido</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.IdVehiculo" class="btn btn-info btn-sm">Detalles</a>
                    <a asp-action="Editar" asp-route-id="@item.IdVehiculo" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Eliminar" asp-route-id="@item.IdVehiculo" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>