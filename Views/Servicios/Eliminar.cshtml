@{
}

@model Sistemas.Models.Servicio

<h2>Eliminar Servicio</h2>

<div class="alert alert-danger">¿Está seguro de eliminar este servicio?</div>

<div class="card">
    <div class="card-body">
        <p><strong>ID:</strong> @Model.IdServicio</p>
        <p><strong>Cliente:</strong> @Model.Cliente?.Nombre @Model.Cliente?.Apellido</p>
        <p><strong>Fecha:</strong> @Model.Fecha.ToShortDateString()</p>
        <p><strong>Empleado:</strong> @Model.Empleado?.Nombre</p>
        <p><strong>Tipo de Servicio:</strong> @Model.TipoServicio?.Nombre</p>
    </div>
</div>

<form asp-action="Eliminar" method="post" class="mt-3">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.IdServicio" />
    <button class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>