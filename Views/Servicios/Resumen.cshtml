@{
}
@model IEnumerable<Sistemas.Models.Servicio>

<h2>Resumen de Servicios (HU0205)</h2>

<hr />

<h4>Servicios realizados</h4>

<table class="table table-striped table-bordered mt-3">
    <thead class="table-dark">
        <tr>
            <th>Tipo de Servicio</th>
            <th>Cantidad</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in ViewBag.Resumen)
        {
            <tr>
                <td>@item.Tipo</td>
                <td>@item.Cantidad</td>
            </tr>
        }
    </tbody>
</table>

<hr />

<h4>Gráfico de Servicios</h4>

<canvas id="graficoServicios" height="120"></canvas>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        var ctx = document.getElementById('graficoServicios');

        var chart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: @Html.Raw(ViewBag.Labels),
                datasets: [{
                    label: 'Servicios Realizados',
                    data: @Html.Raw(ViewBag.Data),
                    backgroundColor: 'rgba(54, 162, 235, 0.6)'
                }]
            }
        });
    </script>
}
