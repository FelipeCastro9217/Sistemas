@{
}

@model IEnumerable<Sistemas.Models.Servicio>

<h2>Listado de Servicios (HU0204)</h2>
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
<a asp-action="Crear" class="btn btn-primary mb-3">Registrar Servicio (HU0201)</a>
<a asp-action="Resumen" class="btn btn-success mb-3 ms-2">Resumen de Servicios (HU0205)</a>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Fecha</th>
            <th>Cliente</th>
            <th>Empleado</th>
            <th>Tipo</th>
            <th>Obs.</th>
            <th>Acciones</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IdServicio</td>
                <td>@item.Fecha.ToShortDateString()</td>
                <td>@item.Cliente?.Nombre @item.Cliente?.Apellido</td>
                <td>@item.Empleado?.Nombre</td>
                <td>@item.TipoServicio?.Nombre</td>
                <td>@item.Observaciones</td>

                <td>
                    <a asp-action="Details" asp-route-id="@item.IdServicio" class="btn btn-info btn-sm">Detalles</a>
                    <a asp-action="Editar" asp-route-id="@item.IdServicio" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Eliminar" asp-route-id="@item.IdServicio" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
