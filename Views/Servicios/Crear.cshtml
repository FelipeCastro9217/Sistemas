@model Sistemas.Models.Servicio

<h2>Registrar Servicio (HU0201)</h2>

<form asp-action="Crear" method="post" class="mt-3">

    <div class="row">

        <div class="col-md-4 mb-3">
            <label class="form-label">Cliente</label>
            <select asp-for="IdCliente" class="form-select" asp-items="ViewBag.Clientes"></select>
        </div>

        <div class="col-md-4 mb-3">
            <label class="form-label">Empleado</label>
            <select asp-for="IdEmpleado" class="form-select" asp-items="ViewBag.Empleados"></select>
        </div>

        <div class="col-md-4 mb-3">
            <label class="form-label">Tipo de Servicio</label>
            <select asp-for="IdTipoServicio" class="form-select" asp-items="ViewBag.Tipos"></select>
        </div>

        <div class="col-md-4 mb-3">
            <label class="form-label">Fecha</label>
            <input asp-for="Fecha" type="date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
        </div>

        <div class="col-md-12 mb-3">
            <label class="form-label">Resultado del Servicio</label>
            <textarea asp-for="ResultadoServicio" class="form-control"></textarea>
        </div>

        <div class="col-md-12 mb-3">
            <label class="form-label">Observaciones</label>
            <textarea asp-for="Observaciones" class="form-control"></textarea>
        </div>
    </div>

    <button class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</form>
<div asp-validation-summary="All" class="text-danger mb-3"></div>
