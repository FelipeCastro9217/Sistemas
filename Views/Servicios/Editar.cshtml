@model Sistemas.Models.Servicio

<h2>Editar Servicio (HU0202)</h2>

<form asp-action="Editar" method="post">

    <input type="hidden" asp-for="IdServicio" />

    <div class="row">

        <div class="col-md-4 mb-3">
            <label>Cliente</label>
            <select asp-for="IdCliente" class="form-select" asp-items="ViewBag.Clientes"></select>
        </div>

        <div class="col-md-4 mb-3">
            <label>Empleado</label>
            <select asp-for="IdEmpleado" class="form-select" asp-items="ViewBag.Empleados"></select>
        </div>

        <div class="col-md-4 mb-3">
            <label>Tipo de Servicio</label>
            <select asp-for="IdTipoServicio" class="form-select" asp-items="ViewBag.Tipos"></select>
        </div>

        <div class="col-md-4 mb-3">
            <label>Fecha</label>
            <input asp-for="Fecha" type="date" class="form-control" />
        </div>

        <div class="col-md-12 mb-3">
            <label>Resultado</label>
            <textarea asp-for="ResultadoServicio" class="form-control"></textarea>
        </div>

        <div class="col-md-12 mb-3">
            <label>Observaciones</label>
            <textarea asp-for="Observaciones" class="form-control"></textarea>
        </div>

    </div>

    <button class="btn btn-primary">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</form>
