@model Sistemas.Controllers.LoginViewModel

@{
    ViewData["Title"] = "Inicio de Sesión";
}

<div class="container mt-5" style="max-width: 450px;">
    <h2 class="mb-4 text-center">Inicio de Sesión</h2>

    <form asp-action="Index" method="post">

        <div class="mb-3">
            <label class="form-label">Usuario</label>
            <input asp-for="Usuario" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Contraseña</label>
            <input asp-for="Password" type="password" class="form-control" required />
        </div>

        <button class="btn btn-primary w-100">Ingresar</button>

    </form>

    <hr />
    <p class="text-center text-muted mt-3">
        Use <strong>admin / admin</strong> para ingresar (del PDF)
    </p>
</div>
